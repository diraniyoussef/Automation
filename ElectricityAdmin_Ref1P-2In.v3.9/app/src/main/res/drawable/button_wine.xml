<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#987a80" />
            <gradient android:angle="-90" android:endColor="#cbbcbf" android:startColor="#baa6aa" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#987a80" />
            <solid android:color="#baa6aa"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#d4c7ca" />
            <gradient android:angle="-90" android:endColor="#cbbcbf" android:startColor="#d4c7ca" />
        </shape>
    </item>
</selector>
